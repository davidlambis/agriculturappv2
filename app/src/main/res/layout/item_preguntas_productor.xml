<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/grey_900"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNumeroPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_pregunta_numero"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿La cosecha de plátano más cercana en qué fecha es ?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAutorPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cristian Santofimio"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnOfertar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_global"
                android:background="@drawable/custom_button"
                android:text="@string/btn_responder"
                android:textColor="@color/grey_600" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>